@{
  Layout = "_Layout";
}
<h1>University Registrar</h1>
<h2>Course Directory</h2>
@using Registrar.Models

@if (Model.Count == 0)
{
  <p>You have no courses.</p>
}
else
{
  <ul>
    @foreach (Course course in Model)
    {
      <li>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add Course", "Create")</p>