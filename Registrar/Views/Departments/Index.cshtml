@{
  Layout="_Layout";
}
@using Registrar.Models
<h1>University Registrar</h1>
<h2>All Departments</h2>

@if (Model.Count == 0)
{
  <p>There are no departments added.</p>
}
else
{
  <ul>
    @foreach (Department department in Model)
    {
      <li>@Html.ActionLink($"{department.Name}", "Details", new { id = department.DepartmentId })</li>
      @using (Html.BeginForm("Delete", "Departments", routeValues: new {id = department.DepartmentId}))
      {
        <input type="submit" value="Delete">
      }
    }
  </ul>
}

<p>@Html.ActionLink("Add Department", "Create")</p>