@{
  Layout="_Layout";
}
@using Factory.Models
<h1>Locations</h1>

@if (Model.Count == 0)
{
  <p>There are no locations added.</p>
}
else
{
  <table>
    <thead>
      <tr>
        <th>Location Name</th>
        <th>Manage</th>
      </tr>
    </thead>
    <tbody>
    @foreach (Location location in Model)
    {
      <tr>
        <td>@Html.ActionLink($"{location.Name}", "Details", new { id = location.LocationId })</td>
        <td>
          @using (Html.BeginForm("Delete", "Locations", routeValues: new {id = location.LocationId}))
          {
            <input type="submit" value="Delete">
          }
        </td>
      </tr>
    }
    </tbody>
  </table>
}

<p>@Html.ActionLink("Add Location", "Create")</p>