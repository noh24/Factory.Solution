@{
  Layout="_Layout";
}
@using Factory.Models
<h1>Locations</h1>

@if (Model.Count == 0)
{
  <p>There are no locations added.</p>
}
else
{
  <ul>
    @foreach (Location location in Model)
    {
      <li>@Html.ActionLink($"{location.Name}", "Details", new { id = location.LocationId })</li>
      @using (Html.BeginForm("Delete", "Locations", routeValues: new {id = location.LocationId}))
      {
        <input type="submit" value="Delete">
      }
    }
  </ul>
}

<p>@Html.ActionLink("Add Location", "Create")</p>