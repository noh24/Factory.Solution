@{
  Layout = "_Layout";
}
@using Factory.Models
<h1>Machines</h1>

@if (Model.Count == 0)
{
  <p>You have no machines.</p>
}
else
{
  <table>
    <thead>
      <tr>
        <th>Machine Name</th>
        <th>Manage</th>
      </tr>
    </thead>
    <tbody>
      @foreach (Machine machine in Model)
      {
        <tr>
          <td>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</td>
          <td>
            @using (Html.BeginForm("Delete", "Machines", routeValues: new { id = machine.MachineId }))
            {
              <input type="submit" value="Delete">
            }
          </td>
        </tr>
      }
    </tbody>
  </table>
}
<p>@Html.ActionLink("Add Machine", "Create")</p>