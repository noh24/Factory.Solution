@{
  Layout = "_Layout";
}
@model Factory.Models.Machine
<h1>Edit Machine @Model.Name</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @Html.LabelFor(model => model.InstallmentDate)
  @Html.TextBoxFor(model => model.InstallmentDate, new {type="date"})

  @Html.LabelFor(model => model.Location)
  @Html.DropDownList("LocationId")
  
  <input type="submit" value="Update" />

}
@using (Html.BeginForm("Delete", "Machines"))
{
  @Html.Hidden("id", @Model.MachineId)
  <input type="submit" value="Delete" />
}

<p>@Html.ActionLink("Add Machine", "Create")</p>
