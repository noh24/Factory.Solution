@{
  Layout = "_Layout";
}
@model Factory.Models.Engineer
<h1>Add Engineer</h1>

@using (Html.BeginForm())
{
  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class="text-danger"})</p>
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  <p>@Html.ValidationMessageFor(model => model.SpecialtyMachine, "", new { @class="text-danger"})</p>
  @Html.Label("Specialty Machine")
  @Html.TextBoxFor(model => model.SpecialtyMachine)

  <p>@Html.ValidationMessageFor(model => model.LicenseRenewalDate, "", new { @class="text-danger"})</p>
  @Html.Label("License Renewal Date")
  @Html.TextBoxFor(model => model.LicenseRenewalDate, new { type="date" })

  <div>
    @Html.LabelFor(model => model.Location)
    @Html.DropDownList("LocationId")
  </div>

  <input type="submit" value="Add" />
}
<p><strong>NOTE:</strong> You need to have at least one location before you can add an engineer!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Locations") to create a location.</p>