@{
  Layout = "_Layout";
}
@using Factory.Models
<h1>Engineer</h1>

@if (Model.Count == 0)
{
  <p>You have no engineers.</p>
}
else
{
  <table>
    <thead>
      <tr>
        <th>Engineer Name</th>
      </tr>
    </thead>
    <tbody>
    @foreach (Engineer engineer in Model)
    {
      <tr>
        <td>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</td>
      </tr>
    }
    </tbody>
  </table>
}

<p>@Html.ActionLink("Add Engineer", "Create")</p>